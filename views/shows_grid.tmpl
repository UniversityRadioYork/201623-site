{{template "partials/header.tmpl" .}}

<div class="content">
    <h1>{{.PageTitle}}</h1>
    <div class="container-fluid container-padded bg-primary pb-0">
        <h2>Seasons This Term</h2>
        <div class="row custom-scrollbar scroll-horiz scroll-none-xl thumbnail-slider">
            {{range .Seasons}}
                <div class="col-8 col-sm-7 col-md-4 col-lg-3 col-xl-2 p-3 thumbnail-container">
                    <div class="ury-card">
                        <div class="ury-card-img" style="background: url('{{.PhotoURL}}');" alt="{{.SeasonName}} Logo"></div>
                        <div class="ury-card-body">
                            <div class="ury-card-title">{{.SeasonName}}</div>
                            <span class="ury-card-date">{{.StartDate.Format "15:04 - Mon"}} â€¢ {{.Duration}}</span>
                        </div>
                    </div>
                </div>
            {{end}}
        </div>
    </div>
</div>

{{template "partials/footer.tmpl" .}}